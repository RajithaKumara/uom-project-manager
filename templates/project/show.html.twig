{% extends 'base.html.twig' %}

{% block body %}
    <h1>Project</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ project.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ project.name }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{% if project.description %}{{ project.description }}{% endif %}</td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td>{{ project.startDate|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Cost</th>
            <td>{% if project.cost %}{{ project.cost }}{% endif %}</td>
        </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('project_list') }}">Back to the Project List</a>
        </li>
        <li>
            <a href="{{ path('project_edit', { 'id': project.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
            <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
